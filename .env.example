# =============================================================================
# DIGITALEDGESOLUTIONS - ENVIRONMENT CONFIGURATION
# =============================================================================

# Application Settings
APP_NAME="DigitalEdgeSolutions"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://digitaledgesolutions.com
APP_TIMEZONE=UTC

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=digitaledgesolutions
DB_USER=root
DB_PASS=your_secure_password

# Security Keys
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long
ENCRYPTION_KEY=your-encryption-key-32-chars-long!!
CSRF_TOKEN_SECRET=csrf-secret-key-change-in-production

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_ENCRYPTION=tls
SMTP_FROM_EMAIL=noreply@digitaledgesolutions.com
SMTP_FROM_NAME="DigitalEdgeSolutions"

# Social Login Credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Firebase Configuration
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id

# Payment Gateway Configuration
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_key
STRIPE_SECRET_KEY=sk_test_your_key

# Cloud Storage
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Redis Configuration (for caching and real-time features)
REDIS_ENABLED=true
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Blockchain Configuration (for certificate verification)
BLOCKCHAIN_ENABLED=false
BLOCKCHAIN_NETWORK=polygon
BLOCKCHAIN_RPC_URL=https://polygon-rpc.com
BLOCKCHAIN_CONTRACT_ADDRESS=0x...
BLOCKCHAIN_PRIVATE_KEY=your-private-key

# Real-time Server
REALTIME_SERVER_PORT=3001
REALTIME_SERVER_URL=wss://digitaledgesolutions.com:3001

# Security Settings
SESSION_TIMEOUT=1800
LOGIN_MAX_ATTEMPTS=5
LOGIN_LOCKOUT_TIME=900
PASSWORD_MIN_LENGTH=8
JWT_EXPIRY=86400
JWT_REFRESH_EXPIRY=604800

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
API_RATE_LIMIT=1000

# File Upload Settings
UPLOAD_MAX_SIZE=104857600

# LMS Settings
COURSE_COMPLETION_THRESHOLD=80
QUIZ_PASSING_SCORE=60
MAX_QUIZ_ATTEMPTS=3
VIDEO_PROGRESS_INTERVAL=10

# Certificate Settings
CERTIFICATE_ENABLED=true
CERTIFICATE_TEMPLATE=default
CERTIFICATE_ISSUER_NAME="DigitalEdgeSolutions"
CERTIFICATE_ISSUER_TITLE="CEO"

# API Settings
API_VERSION=v1
API_DEFAULT_PER_PAGE=20
API_MAX_PER_PAGE=100

# CORS Settings
CORS_ALLOWED_ORIGINS=https://digitaledgesolutions.com,https://www.digitaledgesolutions.com

# Maintenance Mode
MAINTENANCE_MODE=false

# Feature Flags
FEATURE_NEW_DASHBOARD=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_BLOCKCHAIN_CERTIFICATES=false
